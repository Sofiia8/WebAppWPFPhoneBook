@model WebApplicationPhoneBook.Models.Person
@{
    ViewData["Title"] = "Добавить новую запись";
}
<html>
    <body>
        <h2>Добавить новую запись</h2>
            <form asp-action="SaveNewData" asp-controller ="Home" method="post">
                <div class="form-group">
                    <label asp-for="Surname" class="control-label">Фамилия: </label>
                    <input asp-for="Surname" class="form-control" type ="text" name="Surname" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"> Имя: </label>
                    <input asp-for="Name" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Secondname" class="control-label"> Отчество: </label>
                    <input asp-for="Secondname" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Phonenum" class="control-label"> Номер телефона: </label>
                    <input asp-for="Phonenum" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"> Адрес: </label>
                    <input asp-for="Address" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"> Описание: </label>
                    <input asp-for="Description" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
                </div>
            </form>
     </body>
</html>